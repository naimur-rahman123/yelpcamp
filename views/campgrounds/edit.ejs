<%- include("../partials/header") %>

<div class="container">
    <h1 class="my-4 text-center">Edit <%= campground.name %></h1>
    <div class="row">
        <div style="width: 50%; margin: 0 auto;">
            <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="post">
                <div class="form-group">
                    <input class="form-control" type="text" name="campground[name]" value="<%= campground.name %>" required>
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="campground[price]" value="<%= campground.price %>" min=".5" step=".5" required>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="campground[image]" value="<%= campground.image %>" required>
                </div>
                <div class="form-group">
                    <textarea class="form-control" type="text" name="campground[description]" rows="10" cols="50" required><%= campground.description %></textarea>
                </div>
                <button class="btn btn-success btn-lg btn-block"> Update </button>
            </form>
            <a href="/campgrounds">Go to Campgrounds</a>
        </div>
    </div>
</div>

<%- include("../partials/footer") %>